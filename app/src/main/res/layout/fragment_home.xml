<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#012E4A"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".ui.activities.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="24dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/drogue_" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="¡Gracias por hacer parte de Droge+!"
        android:textAlignment="center"
        android:textColor="@color/app_white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center"
        android:text="Una aplicación creada para adultos de la tercera edad que requieren facilitar el proceso de adquisición de medicamentos desde cualquier eps. \n \n Es una app realizada por estudiantes de la Universidad del Cauca, cursantes de la electiva Desarrollo de aplicaciones Móviles y cuyos nombres son Laura Sofía Daza, Cristian Pinto y Santiago Yangana. "
        android:textAlignment="center"
        android:textColor="@color/app_white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="¡Bienvenid@!"
        android:textAlignment="center"
        android:textColor="@color/app_white"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>